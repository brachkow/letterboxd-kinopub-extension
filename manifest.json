{
  "manifest_version": 3,
  "name": "Watch on KinoPub for Letterboxd",
  "version": "1.0",
  "description": "Adds a handy button to Letterboxd that searches for movie on KinoPub",
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
  "content_scripts": [
    {
      "matches": ["*://letterboxd.com/*"],
      "js": ["index.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "watch-on-kinopub-for-letterboxd@brachkow.com"
    }
  }
}
